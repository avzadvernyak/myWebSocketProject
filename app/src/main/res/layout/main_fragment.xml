<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <TextView
            android:id="@+id/connectToTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="24dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="24dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:textSize="18sp"
            android:textAlignment="center"/>
    <TextView
            android:id="@+id/firstSensorTitleTextView"
            android:text="@string/firstSensorTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="48dp"
            app:layout_constraintTop_toBottomOf="@+id/connectToTextView"
            android:layout_marginTop="24dp"/>
    <TextView
            android:id="@+id/firstSensorValueTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@+id/firstSensorTitleTextView"
            app:layout_constraintStart_toEndOf="@+id/firstSensorTitleTextView" android:layout_marginStart="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/firstSensorTitleTextView"/>
    <TextView
            android:id="@+id/secondSensorTitleTextView"
            android:text="@string/secondSensorTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="48dp"
            android:textStyle="bold"
            android:layout_marginTop="16dp" app:layout_constraintTop_toBottomOf="@+id/firstSensorTitleTextView"/>
    <TextView
            android:id="@+id/secondSensorValueTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@+id/secondSensorTitleTextView" android:layout_marginStart="8dp"
            app:layout_constraintTop_toTopOf="@+id/secondSensorTitleTextView"/>
    <TextView
            android:id="@+id/thirdSensorTitleTextView"
            android:text="@string/thirdSensorTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="48dp"
            app:layout_constraintTop_toBottomOf="@+id/secondSensorTitleTextView" android:layout_marginTop="16dp"/>
    <TextView
            android:id="@+id/thirdSensorValueTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@+id/thirdSensorTitleTextView"
            app:layout_constraintStart_toEndOf="@+id/secondSensorTitleTextView" android:layout_marginStart="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/thirdSensorTitleTextView"/>
    <CheckBox
            android:id="@+id/statusRelayCheckBox"
            android:text="@string/statusRelayTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="32dp"
            app:layout_constraintTop_toBottomOf="@+id/statusAutomaticCheckBox"/>
    <CheckBox
            android:id="@+id/statusAutomaticCheckBox"
            android:text="@string/statusAutomatic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toBottomOf="@+id/divider"
            android:layout_marginTop="8dp"/>
    <Button
            android:id="@+id/reconnectButton"
            android:text="@string/reconnectButtonTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginBottom="32dp"
            app:layout_constraintBottom_toTopOf="@+id/logTextView"
            android:visibility="invisible"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"/>


    <TextView
            android:id="@+id/logTextView"
            android:text="@string/logTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintHorizontal_bias="0.0" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/bottom_sensor_navigation"/>

    <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/bottom_sensor_navigation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:background="@color/colorPrimary"
            app:menu="@menu/bottom_sensor_navigation_menu"
            app:itemTextColor="@color/design_default_color_background"
            app:itemIconTint="@color/design_default_color_background"
            app:layout_constraintBottom_toBottomOf="parent"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/is_show_table_fab"
            android:tooltipText="Switch to graph view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            app:srcCompat="@drawable/ic_list" android:layout_marginEnd="32dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginBottom="32dp"
            app:layout_constraintBottom_toTopOf="@+id/reconnectButton"
            app:backgroundTint="@color/design_default_color_secondary"
    />
    <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/is_show_graph_fab"
            android:tooltipText="Switch to table view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            app:srcCompat="@drawable/ic_bar_chart" android:layout_marginEnd="32dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginBottom="32dp"
            app:layout_constraintBottom_toTopOf="@+id/reconnectButton"
            app:backgroundTint="@color/design_default_color_secondary"
    />
    <View
            android:id="@+id/divider"
            android:layout_width="395dp"
            android:layout_height="1dp"
            android:background="?android:attr/listDivider"
            app:layout_constraintTop_toBottomOf="@+id/thirdSensorTitleTextView"
            android:layout_marginTop="32dp" android:visibility="visible" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>