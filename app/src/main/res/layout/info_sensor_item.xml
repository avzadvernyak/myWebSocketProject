<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


    <TextView
            android:id="@+id/dateTimeTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="24dp"
            app:layout_constraintEnd_toStartOf="@+id/valueTextView"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" android:textAlignment="center"/>
    <TextView
            android:id="@+id/valueTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            app:layout_constraintStart_toEndOf="@+id/dateTimeTextView"
            android:layout_marginStart="8dp"
            app:layout_constraintTop_toTopOf="@+id/dateTimeTextView"
            app:layout_constraintBottom_toBottomOf="@+id/dateTimeTextView"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="24dp" android:textAlignment="center"/>
</androidx.constraintlayout.widget.ConstraintLayout>